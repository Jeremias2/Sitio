*
{
padding:0px;
margin:0px;
}

.header
{
margin-top:auto;

font-family:Arial, Helvetica, sans-serif;
position:fixed;
top: 0px;
left: 0px;
}

ul, ol
{
list-style:none;
}

.nav > li
{
float:left;
}

.nav li a
{
background-color: #000;

color: #fff;
text-decoration:none;
padding:10px 15px;
display:block;
}

.nav li a:hover
{
background-color:#434343;
}

.nav li ul
{
display:none;
position:absolute;
min-width:140px;
}

.nav li:hover > ul
{
display:block;
}

.nav li ul li
{
position:relative;
}

.nav li ul li ul
{
right:-140px;
top:0px;
}

a:hover
{
text-decoration: underline;
color:#160489;
}

.margin
{
position:relative;
top:2px;
}

a.href{
text-decoration:none;
color: #DBDBDB;
font-family:Verdana;

}

a.href:hover{
text-decoration:none;
color:#000;
}